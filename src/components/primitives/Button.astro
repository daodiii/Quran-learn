---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'gold';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  disabled?: boolean;
  type?: 'button' | 'submit' | 'reset';
  id?: string;
  class?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  disabled = false,
  type = 'button',
  id,
  class: className = '',
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'button';
const baseClass = `btn btn-${variant} btn-${size} ${className}`;
---

<Tag
  class={baseClass}
  href={href}
  id={id}
  type={!href ? type : undefined}
  disabled={!href && disabled}
  aria-disabled={disabled}
  {...rest}
>
  <slot />
</Tag>

<style>
  .btn {
    /* Layout */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);

    /* Typography */
    font-weight: 600;
    text-decoration: none;
    line-height: 1;

    /* Interactive */
    cursor: pointer;
    transition: all 150ms ease;
    border: none;
    outline: none;

    /* Design tokens */
    border-radius: var(--radius-md);
  }

  /* Size variants with logical properties */
  .btn-sm {
    padding-inline: 1.25rem;
    padding-block: 0.5rem;
    font-size: 0.8125rem;
  }

  .btn-md {
    padding-inline: 1.75rem;
    padding-block: 0.625rem;
    font-size: 0.9375rem;
  }

  .btn-lg {
    padding-inline: 2.25rem;
    padding-block: 0.75rem;
    font-size: 1rem;
    letter-spacing: 0.02em;
  }

  /* Variant styles */
  .btn-primary {
    background-color: var(--accent-primary);
    color: #ffffff;
    box-shadow: 0 4px 14px rgba(13, 71, 73, 0.3);
  }

  .btn-primary:hover:not([disabled]):not([aria-disabled="true"]) {
    background-color: #1a5e60;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 71, 73, 0.4);
  }

  .btn-gold {
    background: var(--gradient-gold);
    color: #000000;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 15px rgba(197, 160, 89, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-gold:hover:not([disabled]):not([aria-disabled="true"]) {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(197, 160, 89, 0.5);
    filter: brightness(1.1);
  }

  .btn-outline {
    background-color: transparent;
    color: var(--color-text-primary);
    border: 1px solid var(--color-border-primary);
  }

  .btn-outline:hover:not([disabled]):not([aria-disabled="true"]) {
    background-color: var(--color-background-secondary);
    border-color: var(--color-text-primary);
    transform: translateY(-2px);
  }

  /* Disabled state */
  .btn[disabled],
  .btn[aria-disabled="true"] {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Focus visible with design token */
  .btn:focus-visible {
    outline: 2px solid var(--color-border-focus);
    outline-offset: 2px;
  }

  /* Accessibility: reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .btn {
      transition: none;
    }
  }
</style>
