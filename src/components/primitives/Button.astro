---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'gold';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  disabled?: boolean;
  type?: 'button' | 'submit' | 'reset';
  id?: string;
  class?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  disabled = false,
  type = 'button',
  id,
  class: className = '',
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'button';
const baseClass = `btn btn-${variant} btn-${size} ${className}`;
---

<Tag
  class={baseClass}
  href={href}
  id={id}
  type={!href ? type : undefined}
  disabled={!href && disabled}
  aria-disabled={disabled}
  {...rest}
>
  <slot />
</Tag>

<style>
  .btn {
    /* Layout */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    position: relative;
    overflow: hidden;

    /* Typography */
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: 0.02em;
    text-decoration: none;
    line-height: 1;

    /* Interactive */
    cursor: pointer;
    transition: all var(--transition-fast);
    border: none;
    outline: none;

    /* Design tokens */
    border-radius: var(--radius-lg);
  }

  /* Shine sweep effect */
  .btn::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 70%
    );
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
    transition: transform 0.6s ease;
  }

  .btn:hover::before {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }

  /* Size variants with logical properties */
  .btn-sm {
    padding-inline: 1.5rem;
    padding-block: 0.625rem;
    font-size: 0.875rem;
  }

  .btn-md {
    padding-inline: 2rem;
    padding-block: 0.75rem;
    font-size: 1rem;
  }

  .btn-lg {
    padding-inline: 2.75rem;
    padding-block: 1rem;
    font-size: 1.0625rem;
    letter-spacing: 0.03em;
  }

  /* Variant styles */
  .btn-primary {
    background-color: var(--accent-primary);
    color: var(--text-inverse);
    box-shadow: var(--shadow-primary);
  }

  .btn-primary:hover:not([disabled]):not([aria-disabled="true"]) {
    background-color: var(--accent-primary-hover);
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(26, 17, 71, 0.4);
  }

  .btn-gold {
    background: var(--gradient-gold);
    color: var(--text-primary);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    box-shadow: var(--shadow-gold);
  }

  .btn-gold:hover:not([disabled]):not([aria-disabled="true"]) {
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(184, 134, 11, 0.45);
    filter: brightness(1.08);
  }

  .btn-outline {
    background-color: transparent;
    color: var(--accent-primary);
    border: 2px solid var(--accent-primary);
  }

  .btn-outline:hover:not([disabled]):not([aria-disabled="true"]) {
    background-color: var(--accent-primary);
    color: var(--text-inverse);
    transform: translateY(-2px);
    box-shadow: var(--shadow-primary);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--accent-primary);
    border: 2px solid var(--accent-primary);
  }

  .btn-secondary:hover:not([disabled]):not([aria-disabled="true"]) {
    background-color: var(--accent-primary);
    color: var(--text-inverse);
    transform: translateY(-2px);
    box-shadow: var(--shadow-primary);
  }

  .btn-ghost {
    background-color: transparent;
    color: var(--text-secondary);
  }

  .btn-ghost:hover:not([disabled]):not([aria-disabled="true"]) {
    background-color: var(--color-background-secondary);
    color: var(--text-primary);
  }

  /* Disabled state */
  .btn[disabled],
  .btn[aria-disabled="true"] {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn[disabled]::before,
  .btn[aria-disabled="true"]::before {
    display: none;
  }

  /* Focus visible with design token */
  .btn:focus-visible {
    outline: 3px solid var(--color-border-focus);
    outline-offset: 3px;
  }

  /* Accessibility: reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .btn {
      transition: none;
    }

    .btn::before {
      display: none;
    }
  }
</style>
