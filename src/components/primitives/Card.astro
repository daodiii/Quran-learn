---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  clickable?: boolean;
  href?: string;
  class?: string;
  [key: string]: any; // Allow arbitrary HTML attributes including data-*
}

const {
  variant = 'default',
  padding = 'md',
  clickable = false,
  href,
  class: className = '',
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'div';
const cardClass = `card card-${variant} card-padding-${padding} ${clickable || href ? 'card-clickable' : ''} ${className}`;
---

<Tag class={cardClass} href={href} {...rest}>
  <slot />
</Tag>

<style>
  .card {
    /* Display */
    display: block;
    text-decoration: none;
    color: inherit;

    /* Design tokens */
    background-color: var(--color-background-elevated);
    border-radius: var(--radius-lg);
    transition: all 200ms ease;
  }

  /* Variant styles */
  .card-default {
    border: 1px solid var(--color-border-primary);
  }

  .card-elevated {
    border: 1px solid rgba(0, 0, 0, 0.03);
    box-shadow: var(--shadow-sm);
  }

  :global([data-theme="dark"]) .card-elevated {
    border: 1px solid rgba(255, 255, 255, 0.03);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .card-outlined {
    border: 1px solid var(--color-border-primary);
  }

  /* Padding variants using logical properties */
  .card-padding-none {
    padding: 0;
  }

  .card-padding-sm {
    padding: var(--spacing-md);
  }

  .card-padding-md {
    padding: var(--spacing-xl);
  }

  .card-padding-lg {
    padding: var(--spacing-2xl);
  }

  /* Clickable state */
  .card-clickable {
    cursor: pointer;
  }

  .card-clickable:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-color: var(--accent-primary);
  }

  .card-clickable:focus-visible {
    outline: 2px solid var(--color-border-focus);
    outline-offset: 2px;
  }

  /* Accessibility: reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }

    .card-clickable:hover {
      transform: none;
    }
  }
</style>
