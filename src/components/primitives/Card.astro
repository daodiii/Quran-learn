---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  clickable?: boolean;
  href?: string;
  class?: string;
  [key: string]: any; // Allow arbitrary HTML attributes including data-*
}

const {
  variant = 'default',
  padding = 'md',
  clickable = false,
  href,
  class: className = '',
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'div';
const cardClass = `card card-${variant} card-padding-${padding} ${clickable || href ? 'card-clickable' : ''} ${className}`;
---

<Tag class={cardClass} href={href} {...rest}>
  <slot />
</Tag>

<style>
  .card {
    /* Display */
    display: block;
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;

    /* Frosted glass base */
    background-color: var(--glass-bg-elevated);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border-radius: var(--radius-xl);
    transition: all var(--transition-base);
  }

  /* Variant styles */
  .card-default {
    border: 1px solid var(--glass-border-light);
    box-shadow: var(--shadow-md);
  }

  .card-elevated {
    border: 1px solid var(--glass-border-subtle);
    box-shadow: var(--shadow-float);
  }

  :global([data-theme="dark"]) .card-elevated {
    border: 1px solid rgba(242, 217, 140, 0.08);
  }

  .card-outlined {
    border: 2px solid var(--color-border-primary);
    box-shadow: var(--shadow-sm);
  }

  /* Padding variants using logical properties */
  .card-padding-none {
    padding: 0;
  }

  .card-padding-sm {
    padding: var(--spacing-md);
  }

  .card-padding-md {
    padding: var(--spacing-xl);
  }

  .card-padding-lg {
    padding: var(--spacing-2xl);
  }

  /* Gold bottom bar on hover */
  .card-clickable::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #B8860B 0%, #D4A849 50%, #F2D98C 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-base);
  }

  :global([data-theme="dark"]) .card-clickable::after {
    background: linear-gradient(90deg, #F2D98C 0%, #FFE8A8 100%);
  }

  /* Clickable state */
  .card-clickable {
    cursor: pointer;
  }

  .card-clickable:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-8px) scale(1.01);
    border-color: var(--accent-gold);
  }

  .card-clickable:hover::after {
    transform: scaleX(1);
  }

  .card-clickable:focus-visible {
    outline: 3px solid var(--color-border-focus);
    outline-offset: 3px;
  }

  /* Accessibility: reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }

    .card-clickable:hover {
      transform: none;
    }

    .card-clickable::after {
      transition: none;
    }
  }
</style>
