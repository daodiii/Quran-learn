---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/primitives/Container.astro';
import Button from '../components/primitives/Button.astro';
---

<BaseLayout title="Page Not Found">
  <Container maxWidth="md">
    <div class="not-found">
      <p class="arabic-text" dir="rtl" lang="ar">صفحة غير موجودة</p>
      <h1>404</h1>
      <p class="message">The page you're looking for doesn't exist or has been moved.</p>
      <div class="actions">
        <Button href="/" variant="primary">Go Home</Button>
        <Button href="/learn/" variant="outline">Browse Lessons</Button>
      </div>
    </div>
  </Container>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
    padding-block: 6rem 4rem;
    min-height: 50vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .arabic-text {
    font-family: var(--font-arabic);
    font-size: 1.5rem;
    color: var(--text-tertiary);
  }

  h1 {
    font-family: var(--font-display);
    font-size: 8rem;
    font-weight: 900;
    line-height: 1;
    color: var(--accent-primary);
    opacity: 0.3;
  }

  .message {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 28rem;
  }

  .actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
