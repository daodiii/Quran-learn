---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/primitives/Button.astro';
import CourseCard from '../components/cards/CourseCard.astro';
import CardGrid from '../components/cards/CardGrid.astro';
import SurahCard from '../components/cards/SurahCard.astro';
import GoldCalligraphy from '../components/decoration/GoldCalligraphy.astro';
import { getCollection } from 'astro:content';
import { testimonials } from '../data/testimonials';

// Get all lessons to count them (exclude _index pages)
const allLessons = await getCollection('lessons');
const totalLessons = allLessons.filter(l => !l.id.endsWith('_index')).length;

// Get all surahs to count them
const allSurahs = await getCollection('surahs');
const totalSurahs = allSurahs.length;

// Group lessons by level for featured courses
const levelGroups = [
  {
    num: 1,
    title: 'Foundation',
    titleAr: 'الأساسيات',
    desc: 'Arabic alphabet, vowels, basic word structure, pronouns, and sentence types.',
  },
  {
    num: 2,
    title: 'Core Grammar',
    titleAr: 'القواعد الأساسية',
    desc: 'Nominal and verbal sentences, I\'rab cases, Idafah, prepositions, and adjectives.',
  },
  {
    num: 3,
    title: 'Intermediate',
    titleAr: 'القواعد المتوسطة',
    desc: 'Full verb conjugations, Verb Forms I-X, active/passive participles, passive voice.',
  },
  {
    num: 4,
    title: 'Advanced',
    titleAr: 'القواعد المتقدمة',
    desc: 'Hal, Tamyeez, conditional sentences, exception, emphasis, vocative structures.',
  },
  {
    num: 5,
    title: 'Applied Study',
    titleAr: 'التطبيق القرآني',
    desc: 'Quranic sentence patterns, recognizing I\'rab in verses, rhetorical devices.',
  },
] as const;

// Count lessons per level
const lessonCounts = await Promise.all(
  levelGroups.map(async (level) => {
    const lessons = await getCollection('lessons', ({ data }) => data.level === level.num);
    return lessons.length;
  })
);

const featuredSurahs = [
  { name: 'Al-Fatiha', nameAr: 'الفاتحة', num: 1, verses: 7, slug: '001-al-fatiha', difficulty: 'beginner' as const },
  { name: 'Al-Ikhlas', nameAr: 'الإخلاص', num: 112, verses: 4, slug: '112-al-ikhlas', difficulty: 'beginner' as const },
  { name: 'Al-Falaq', nameAr: 'الفلق', num: 113, verses: 5, slug: '113-al-falaq', difficulty: 'beginner' as const },
  { name: 'An-Nas', nameAr: 'الناس', num: 114, verses: 6, slug: '114-an-nas', difficulty: 'beginner' as const },
];

const features = [
  {
    titleAr: 'إعراب',
    title: 'I\'rab (Case Endings)',
    desc: 'Marfu\', Mansub, Majrur - understand why every word has the ending it does.',
  },
  {
    titleAr: 'أفعال',
    title: 'Verb Forms I-X',
    desc: 'All ten verb forms with patterns, meanings, and Quranic examples.',
  },
  {
    titleAr: 'جملة',
    title: 'Sentence Structure',
    desc: 'Nominal and verbal sentences, Idafah constructions, and complex clauses.',
  },
  {
    titleAr: 'قرآن',
    title: 'Applied Analysis',
    desc: 'Full grammatical breakdown of surahs with word-by-word analysis.',
  },
];
---

<BaseLayout title="Home">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Quranic Grammar",
      "url": "https://quranic-grammar.com/",
      "description": "Learn Quranic Arabic grammar from beginner to advanced. Comprehensive lessons, verb forms, and detailed surah breakdowns.",
      "inLanguage": "en"
    })} />
  </Fragment>
  <!-- World-Class Hero Section -->
  <section class="hero-new">
    <div class="hero-overlay"></div>
    <div class="video-wrapper">
      <video
        class="hero-video-new"
        autoplay
        muted
        playsinline
        poster="/videos/hero-bg-poster.jpg"
        aria-hidden="true"
      >
        <source src="/videos/hero-bg.webm" type="video/webm" />
        <source src="/videos/hero-bg.mp4" type="video/mp4" />
      </video>
    </div>

    <div class="hero-container-new">
      <div class="hero-grid-new">
        <div class="hero-content-new">
          <h1 class="hero-title-new">
            Elevate your understanding by mastering the <span class="text-gradient-gold">language of the noble Quran</span>
          </h1>

          <div class="hero-stats">
            <div class="hero-stat">
              <span class="hero-stat-number">{levelGroups.length}</span>
              <span class="hero-stat-label">Levels</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">{totalLessons}</span>
              <span class="hero-stat-label">Lessons</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">{totalSurahs}</span>
              <span class="hero-stat-label">Surah Breakdowns</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat hero-stat-free">
              <span class="hero-stat-number">100%</span>
              <span class="hero-stat-label">Free</span>
            </div>
          </div>

          <div class="hero-actions-new">
            <Button href="/learn/level-1/01-alphabet-letter-forms/" variant="gold" size="lg" class="btn-world-class">
              Enter the Journey
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true" class="icon-arrow">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7M3 12h18"/>
              </svg>
            </Button>
            <a href="#importance" class="hero-secondary-link">
              Why Grammar?
            </a>
          </div>
        </div>

        <div class="hero-visual-new">
          <GoldCalligraphy />
        </div>
      </div>
    </div>

    <div class="hero-scroll-indicator">
      <div class="mouse">
        <div class="wheel"></div>
      </div>
    </div>
  </section>

  <!-- Importance Section -->
  <section id="importance" class="importance-section">
    <div class="container">
      <div class="importance-grid">
        <div class="importance-content">
          <div class="section-badge">The Divine Foundation</div>
          <h2 class="importance-title">Why Quranic <span class="text-accent">Grammar?</span></h2>
          <div class="importance-narrative">
            <p>
              The Quran was revealed in "Clear Arabic" (Lisanun Arabiyyun Mubeen). Its grammar is not merely a set of rules, but the very vessel through which Allah chose to communicate His final message to humanity.
            </p>
            <p>
              Understanding <span class="text-bold">Sarf</span> (Morphology) and <span class="text-bold">Nahw</span> (Syntax) transforms your relationship with the verses. It turns a surface-level reading into a profound intellectual and spiritual experience.
            </p>
          </div>
          
          <div class="importance-features">
            <div class="i-feature">
              <div class="i-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg></div>
              <div class="i-text">
                <h3>Preserve Meaning</h3>
                <p>A single vowel change in I'rab can alter the entire theological meaning of a verse.</p>
              </div>
            </div>
            <div class="i-feature">
              <div class="i-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg></div>
              <div class="i-text">
                <h3>Connect Heart & Mind</h3>
                <p>When you understand the grammar, the Quran speaks directly to your intellect.</p>
              </div>
            </div>
            <div class="i-feature">
              <div class="i-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4v11h7m1 0h7V4h-7m-1 11v3M4 20h16"/></svg></div>
              <div class="i-text">
                <h3>Direct Dialogue</h3>
                <p>Bypass the limitations of translations and converse with the Text in its original depth.</p>
              </div>
            </div>
            <div class="i-feature">
              <div class="i-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg></div>
              <div class="i-text">
                <h3>Appreciate Eloquence</h3>
                <p>Recognize the Balaghah (Rhetoric) and divine selection of every particle and word.</p>
              </div>
            </div>
            <div class="i-feature">
              <div class="i-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg></div>
              <div class="i-text">
                <h3>Understanding the Miracles of the Quran</h3>
                <p>Why no one has been able to replicate the Quran for over 1400 years.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="importance-visual">
          <div class="visual-card">
            <div class="visual-arabic">لِسَانٌ عَرَبِيٌّ مُبِينٌ</div>
            <div class="visual-label">Clear Arabic Speech</div>
          </div>
          <div class="visual-decoration"></div>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">The Learning Path</h2>
        <p class="section-subtitle">A structured journey through 5 comprehensive levels of Quranic Arabic mastery.</p>
        <div class="scroll-hint" aria-hidden="true">
          <span class="scroll-hint-text">Scroll to explore</span>
          <svg class="scroll-hint-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
      </div>

      <div class="levels-scroll-wrapper">
        <div class="levels-scroll-container">
          <div class="levels-grid-horizontal">
            {levelGroups.map((level, index) => (
              <div class="level-card-wrapper">
                <CourseCard
                  title={level.title}
                  level={level.num}
                  lessonsCompleted={0}
                  totalLessons={lessonCounts[index]}
                  href={`/learn/#level-${level.num}`}
                >
                  {level.desc}
                </CourseCard>
              </div>
            ))}
          </div>
        </div>
      </div>

      <div class="section-cta">
        <Button href="/learn/" variant="gold" size="md">
          View Detailed Curriculum
        </Button>
      </div>
    </div>
  </section>

  <!-- Featured Surahs Section -->
  <section class="section section-alt">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Surah Breakdowns</h2>
        <p class="section-subtitle">Word-by-word grammatical analysis of Quranic chapters</p>
      </div>

      <CardGrid minCardWidth={280} gap="md">
        {featuredSurahs.map(surah => (
          <SurahCard
            name={surah.name}
            nameArabic={surah.nameAr}
            number={surah.num}
            verseCount={surah.verses}
            difficulty={surah.difficulty}
            href={`/surahs/${surah.slug}/`}
          />
        ))}
      </CardGrid>

      <div class="section-cta">
        <Button href="/surahs/" variant="gold" size="sm">
          Explore All Breakdown Chapters
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true" class="icon-arrow">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </Button>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">What You'll Master</h2>
      </div>

      <div class="features-grid">
        {features.map(feature => (
          <div class="feature-card">
            <div class="feature-icon">
              <span class="arabic">{feature.titleAr}</span>
            </div>
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-desc">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  {testimonials.length > 0 && (
    <section class="section section-alt">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">What Learners Say</h2>
          <p class="section-subtitle">Hear from students on their journey to understanding the Quran.</p>
        </div>

        <div class="testimonials-grid">
          {testimonials.map((t) => (
            <div class="testimonial-card">
              <svg class="quote-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M11.3 2.6C6 5.1 2.4 9.9 2.4 15.2c0 3.3 2.1 5.4 4.6 5.4 2.3 0 4.2-1.8 4.2-4.1 0-2.2-1.6-3.9-3.7-4.1.4-2.6 2.5-5.3 5.3-6.8L11.3 2.6zm10.7 0c-5.3 2.5-8.9 7.3-8.9 12.6 0 3.3 2.1 5.4 4.6 5.4 2.3 0 4.2-1.8 4.2-4.1 0-2.2-1.6-3.9-3.7-4.1.4-2.6 2.5-5.3 5.3-6.8L22 2.6z"/>
              </svg>
              <p class="testimonial-text">{t.text}</p>
              <div class="testimonial-author">
                <span class="testimonial-name">{t.name}</span>
                {t.role && <span class="testimonial-role">{t.role}</span>}
              </div>
            </div>
          ))}
        </div>

        <div class="section-cta">
          <Button href="/about/#feedback" variant="gold" size="sm">
            Share Your Experience
          </Button>
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  /* New World-Class Hero Section */
  .hero-new {
    position: relative;
    min-block-size: 100svh;
    padding-block: 6rem 4rem;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #1A1147 0%, #2C1810 50%, #1A1147 100%);
    color: #ffffff;
  }

  .hero-new::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('/patterns/geometric-star.svg');
    background-size: 120px;
    opacity: 0.06;
    z-index: 0;
    pointer-events: none;
  }

  .hero-new::after {
    content: '';
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(184, 134, 11, 0.12) 0%, transparent 70%);
    z-index: 0;
    pointer-events: none;
  }

  @media (min-width: 640px) {
    .hero-new {
      padding-block: 5rem 8rem;
    }
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(26, 17, 71, 0.95) 0%, rgba(26, 17, 71, 0.7) 50%, rgba(44, 24, 16, 0.5) 100%);
    z-index: 1;
  }

  .video-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #1A1147;
  }

  .hero-video-new {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.8; /* Increased visibility */
    /* Removed blur and brightness reduction */
    transform: scale(1.1);
  }

  @media (min-width: 1024px) {
    .video-wrapper {
        /* Constrain video width regarding user feedback "video ... can be much smaller" */
        /* To improve pixel quality, we don't stretch it full width if content allows */
        /* But for a hero background, full width is standard. */
        /* Let's constrain the max-width and fade edges */
    }
    
    .hero-video-new {
      width: 100%;
      height: auto;
      min-height: 100%;
      /* If "smaller" means literally smaller dimension to avoid stretching artifacts */
      /* but we want it to cover. Maybe they meant the *file* size or *viewport* area? */
      /* "so that the pixels are better" -> implies downscaling or not upscaling as much. */
      /* If source is low res, showing it smaller (centered) with blurred edges might specific fix. */
      max-width: 1280px; /* Constrain max width */
      margin: 0 auto;
      box-shadow: 0 0 100px 100px #000000 inset; /* Fade edges into background */
      -webkit-mask-image: radial-gradient(circle, black 30%, transparent 80%);
      mask-image: radial-gradient(circle, black 30%, transparent 80%);
    }
  }

  .hero-container-new {
    max-inline-size: 90rem;
    margin-inline: auto;
    padding-inline: var(--spacing-lg);
    position: relative;
    z-index: 2;
    inline-size: 100%;
  }

  .hero-grid-new {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-grid-new {
      grid-template-columns: 1.2fr 1fr;
    }
  }

  .hero-content-new {
    animation: fadeInUp 1s cubic-bezier(0.22, 1, 0.36, 1);
  }

  /* Gold Calligraphy Container */
  .hero-visual-new {
    display: none;
    justify-content: center;
    align-items: center;
    align-self: start;
    perspective: 1000px;
    animation: fadeInScale 1.2s cubic-bezier(0.22, 1, 0.36, 1);
  }

  @media (min-width: 1024px) {
    .hero-visual-new {
      display: flex;
    }
  }

  @keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }

  .hero-title-new {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 700;
    line-height: 1.08;
    margin-block-end: var(--spacing-xl);
    letter-spacing: -0.03em;
    color: #ffffff;
    max-width: 900px;
  }

  .text-gradient-gold {
    background: linear-gradient(135deg, #F2D98C 0%, #D4A849 40%, #B8860B 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    filter: drop-shadow(0 0 30px rgba(184, 134, 11, 0.4));
  }

  .hero-stats {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    margin-block-end: var(--spacing-xl);
  }

  @media (min-width: 640px) {
    .hero-stats {
      gap: var(--spacing-lg);
    }
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
  }

  .hero-stat-number {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    line-height: 1;
    background: linear-gradient(135deg, #F2D98C 0%, #D4A849 50%, #B8860B 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-stat-label {
    font-family: var(--font-display);
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.7);
    margin-block-start: var(--spacing-xs);
  }

  .hero-stat-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    display: none;
  }

  @media (min-width: 480px) {
    .hero-stat-divider {
      display: block;
    }
  }

  .hero-actions-new {
    display: flex;
    align-items: center;
    gap: var(--spacing-2xl);
  }

  .hero-secondary-link {
    font-family: var(--font-display);
    font-weight: 600;
    color: #ffffff;
    text-decoration: none;
    position: relative;
    padding-block: var(--spacing-xs);
  }

  .hero-secondary-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-gold);
    transition: width 0.3s ease;
  }

  .hero-secondary-link:hover::after {
    width: 100%;
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    opacity: 0.6;
  }

  .mouse {
    width: 26px;
    height: 42px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 14px;
    position: relative;
  }

  .wheel {
    width: 4px;
    height: 8px;
    background: var(--accent-gold, #B8860B);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 2s infinite ease-out;
  }

  @keyframes scrollWheel {
    0% { transform: translate(-50%, 0); opacity: 0; }
    30% { opacity: 1; }
    100% { transform: translate(-50%, 15px); opacity: 0; }
  }

  /* Importance Section */
  .importance-section {
    padding-block: var(--spacing-3xl);
    background: var(--color-background-primary);
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    .importance-section {
      padding-block: 8rem;
    }
  }

  .importance-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3xl);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .importance-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 5rem;
    }
  }

  .section-badge {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-lg);
    background: linear-gradient(135deg, var(--accent-gold-light) 0%, var(--accent-primary-light) 100%);
    color: var(--accent-gold);
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-radius: var(--radius-full, 100px);
    margin-block-end: var(--spacing-lg);
    border: 1px solid rgba(184, 134, 11, 0.15);
  }

  .importance-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-block-end: var(--spacing-xl);
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
  }

  .text-accent {
    color: var(--accent-gold);
  }

  .importance-narrative {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    margin-block-end: var(--spacing-2xl);
  }

  .importance-narrative p {
    margin-block-end: var(--spacing-md);
  }

  .text-bold {
    font-weight: 700;
    color: var(--color-text-primary);
